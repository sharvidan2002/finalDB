{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/1.x/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Forest Office Staff Management",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "exists": true
      },
      "path": {
        "all": true
      },
      "window": {
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": {
          "allow": ["**"]
        }
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.forestoffice.staffmanagement",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Divisional Forest Office - Staff Management",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ]
  }
}
